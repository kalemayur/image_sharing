<div class="border-form-div"> 
  <%= form_with(model: album, local: true) do |form| %>
    <div class="form-group row ">
      <% if album.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% album.errors.full_messages.each do |message| %>
            <li class="errors"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>  
    <div class="form-group row">
      <%= form.label :album_name, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :album_name , class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4">
      <%= form.label :owner, class: "col-form-label" %>
    </div>
      <div class="col-sm-8">
        <%= form.text_field :owner , class: "form-control" %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>  